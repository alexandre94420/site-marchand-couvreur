# Activer la réécriture d'URL
RewriteEngine On

# Forcer HTTPS (si tu as un certificat SSL)
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Protection des fichiers sensibles
<FilesMatch "(\.env|config\.php|config\.ini|\.git)">
  Order Allow,Deny
  Deny from all
</FilesMatch>

# Interdire l'accès aux fichiers système
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|bak|sql)$">
  Order Allow,Deny
  Deny from all
</FilesMatch>

# Personnaliser les erreurs (optionnel)
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html
